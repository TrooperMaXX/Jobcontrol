<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <ScrollView
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:scrollbars="vertical|horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="0dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"


        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dip"
        >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ArbeitsscheinTabelle"
            android:layout_marginTop="0dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbeits-Schein"
                android:id="@+id/textViewUeberschrift"
                android:textStyle="normal|bold"
                android:textSize="22sp"

                android:layout_gravity="center_horizontal" />
            <TableRow
                android:id="@+id/Anschrift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anschrift"
                    android:id="@+id/textViewAnschrift"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />

            </TableRow>

            <TableRow
                android:id="@+id/AnschriftContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/anschrift"
                    android:id="@+id/TextViewAnschriftContent"
                    android:textStyle="normal"
                    android:layout_column="0"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:background="@android:color/transparent" />
            </TableRow>

            <TableRow
                android:id="@+id/Ger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gerät"
                    android:id="@+id/textViewGer"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/GerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ger"
                    android:id="@+id/TextViewGerContent"
                    android:textStyle="normal"
                    android:layout_column="0"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:background="@android:color/transparent" />
            </TableRow>

            <TableRow
                android:id="@+id/Srn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seriennummer"
                    android:id="@+id/textView30"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/SrnContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ger"
                    android:id="@+id/TextViewSrnContent"
                    android:textStyle="normal"
                    android:layout_column="0"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:background="@android:color/transparent" />
            </TableRow>

            <TableRow
                android:id="@+id/Zaehler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zaehler"
                    android:id="@+id/textViewZaehler"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/ZaehlerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/W: "
                        android:id="@+id/textView28"
                        android:textStyle="italic" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sw"
                        android:id="@+id/EditTextSWContent"
                        android:textStyle="normal"
                        android:inputType="number"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:background="@android:color/transparent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farb: "
                        android:id="@+id/textView29"
                        android:textStyle="italic" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/farb"
                        android:id="@+id/EditTextFarbContent"
                        android:textStyle="normal"
                        android:inputType="number"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/Arbeit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ausgeführte Arbeit"
                    android:id="@+id/textViewArbeit"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/ArbeitContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:text="Datum"
                            android:id="@+id/textView20"
                            android:textStyle="normal|italic"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="47dp"
                            android:layout_height="wrap_content"
                            android:text="TechNr"
                            android:id="@+id/textView21"
                            android:textStyle="normal|italic"

                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="47dp"
                            android:layout_height="wrap_content"
                            android:text="AW"
                            android:id="@+id/textView24"
                            android:textStyle="normal|italic"

                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="47dp"
                            android:layout_height="wrap_content"
                            android:text="Weg"
                            android:id="@+id/textView23"
                            android:textStyle="normal|italic"

                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ausgeführte Arbeit"
                            android:id="@+id/textView22"
                            android:textStyle="normal|italic"

                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                    <de.hoell.jobcontrol.adapter.ExpandableHeightListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/arbeitList"
                        />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/Teile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verwendete Teile"
                    android:id="@+id/textViewTeile"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="47dp"
                            android:layout_height="wrap_content"
                            android:text="Menge"
                            android:id="@+id/textViewMengeContent"
                            android:textStyle="normal|italic"

                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="wrap_content"
                            android:text="Teile-Nr"
                            android:id="@+id/textViewTeileNrContent"
                            android:textStyle="normal|italic"

                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bezeichnung"
                            android:id="@+id/textViewBezeichnungContent"
                            android:textStyle="normal|italic"

                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />
                    </LinearLayout>

                    <de.hoell.jobcontrol.adapter.ExpandableHeightListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/teileList"
                        />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bemerkung"
                    android:id="@+id/textView35"
                    android:textStyle="normal|bold"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextBemerkung"
                    android:textStyle="normal"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:hint="Bemerkung" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prüfung Notwendig"
                    android:id="@+id/checkBoxPruefen"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/editTextEmail"
                    android:layout_column="0"
                    android:inputType="textEmailAddress"
                    android:hint="email" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="222dp"
                    android:layout_height="87dp"
                    android:id="@+id/img_sign"
                    android:src="@drawable/sign"
                    android:contentDescription="Sign pls"
                    android:background="@xml/img_background"
                    android:layout_gravity="top" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/editTextKlarname"
                    android:layout_column="0"
                    android:hint="Klarname" />
            </TableRow>

        </TableLayout>




    </ScrollView>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SignLayout"
        android:background="@drawable/sign_"
        android:visibility="gone">

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sign_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#0eb700"
        android:src="@drawable/ic_check_rotated"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:layout_gravity="top|center_horizontal"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sign_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#d10303"
        android:src="@drawable/ic_clear_black_24dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/hoell_blau"
        android:src="@drawable/ic_check_black_24dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:layout_gravity="end|bottom"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/hoell_blau"
        android:src="@drawable/ic_save_black_24dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:layout_gravity="top|end"/>

</FrameLayout>

