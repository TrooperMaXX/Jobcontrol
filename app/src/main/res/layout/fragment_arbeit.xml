<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="6"
            android:columnOrderPreserved="false"
            android:orientation="vertical"
            android:useDefaultMargins="true">

            <TextView
                android:text="Datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView13"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"/>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePickerArbeit"
                android:datePickerMode="spinner"
                android:layout_gravity="center_horizontal"
                android:layout_columnSpan="4"
                android:layout_row="1"
                android:layout_column="0"
                >

            </DatePicker>


            <TextView
                android:text="AW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView15"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

            <TextView
                android:text="Weg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView16"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="2"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPickerAw"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal">

            </NumberPicker>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPickerWeg"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal">

            </NumberPicker>

            <TextView
                android:text="Techniker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView18"
                android:layout_row="3"
                android:layout_column="0"
                android:labelFor="@+id/editTextTechniker"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:text="AusgefÃ¼hrte Arbeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView17"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:labelFor="@+id/editTextArbeit"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextTechniker"
                android:inputType="number"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"

                android:id="@+id/editTextArbeit"
                android:layout_gravity="center_horizontal"

                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="3"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:backgroundTint="@color/hoell_blau"
                android:src="@mipmap/ic_plus"
                android:layout_row="5"
                android:layout_column="0"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/hoell_blau"
                android:src="@mipmap/ic_next"
                android:layout_gravity="end"

                android:layout_row="5"
                android:layout_column="5"/>

        </GridLayout>
    </ScrollView>