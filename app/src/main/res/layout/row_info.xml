<?xml version="1.0" encoding="utf-8"?>
<!-- row_his.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="4dip"
    android:paddingBottom="6dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="Erstellt am"
                    android:singleLine="true"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="Von"
                    android:layout_weight="1"
                    android:padding="3dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/DATUM_INFO_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="DATUM"
                    android:singleLine="true"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/BENUTZER_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="TECH"
                    android:layout_weight="1"
                    android:padding="3dp" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/ANSPRECH_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="ANSPRECH"
                    android:singleLine="true"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/KONART_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="KONART"
                    android:layout_weight="1"
                    android:padding="3dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="Zuletzt geändert"
                    android:singleLine="true"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="Von"
                    android:layout_weight="1"
                    android:padding="3dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/L_DATUM_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="LETZTE ÄND:"
                    android:singleLine="true"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/L_BENUTZER_CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff003d91"
                    android:text="LETZTER ÄND:"
                    android:layout_weight="1"
                    android:padding="3dp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/INFO_CELL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff003d91"
            android:text="TEXT1234"
            android:paddingLeft="5dp"
            android:layout_gravity="left" />

    </LinearLayout>

</RelativeLayout>